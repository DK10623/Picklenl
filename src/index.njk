<section class="content">
  <div class="container">
    <h2>Latest Updates</h2>
    
    {% if collections.aggregatedItems.length > 0 %}
      <div class="items-grid">
        {% for item in collections.aggregatedItems.slice(0, 12) %}
          <article class="item-card">
            <h3><a href="{{ item.link }}" target="_blank" rel="noopener noreferrer">{{ item.title }}</a></h3>
            <p class="meta">
              <span class="source">{{ item.source }}</span>
              <span class="date">{{ item.pubDate | date("%B %d, %Y") }}</span>
            </p>
            <p class="excerpt">{{ item.content | truncate(150) }}</p>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <p>No items available at the moment. Check back soon!</p>
    {% endif %}

    <div class="cta">
      <a href="/rss.xml" class="button">Subscribe to RSS Feed</a>
    </div>
  </div>
</section>

