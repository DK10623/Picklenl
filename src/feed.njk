---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ site.url }}</link>
    <description>{{ site.description }}</description>
    <language>{{ site.language }}</language>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml"/>
    <atom:link href="{{ site.url }}/rss.xml" rel="alternate" type="application/rss+xml"/>
    <lastBuildDate>{{ "now" | date("%a, %d %b %Y %H:%M:%S %z") }}</lastBuildDate>
    {% for item in collections.aggregatedItems.slice(0, 50) %}
    <item>
      <title>{{ item.title | escape }}</title>
      <link>{{ item.link }}</link>
      <guid isPermaLink="false">{{ item.guid }}</guid>
      <pubDate>{{ item.pubDate | date("%a, %d %b %Y %H:%M:%S %z") }}</pubDate>
      <description>{{ item.content | escape }}</description>
      <source url="{{ item.link }}">{{ item.source }}</source>
    </item>
    {% endfor %}
  </channel>
</rss>
